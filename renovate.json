{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Asia/Karachi",
  "schedule": ["after 02:00 and before 06:00 on Sunday"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "packageRules": [
    { "matchManagers": ["npm"], "matchUpdateTypes": ["patch", "minor"], "automerge": true },
    { "matchManagers": ["pip_requirements", "poetry"], "matchUpdateTypes": ["patch", "minor"], "automerge": true },
    { "matchManagers": ["dockerfile"], "matchUpdateTypes": ["patch"], "automerge": true }
  ]
}
